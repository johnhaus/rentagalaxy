<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 offset-sm-2">
      <h2>Update your rental for: <%= @rent.galaxy.name %></h2>
      <div>
        <%= image_tag('homegalaxy.jpeg', style:"width: 100%; max-width:500px") %>

        <p><%= @rent.galaxy.description %></p>
        <p>Price Per Day $ <%= @rent.galaxy.price %></p>
        <p>Owner: <%= @rent.galaxy.owner %></p>
      </div>

      <div>
        <%= form_for(@rent, method: :patch) do |f| %>
          <div>
            <% if @rent.errors.any? %>
              <div id="error_explanation">
                <h3>
                  <%= pluralize(@rent.errors.count, "error") %>
                  prohibited this rent from being saved:
                </h3>
                <ul>
                <% @rent.errors.full_messages.each do |msg| %>
                  <li> <p><%= msg %></p> </li>
                <% end %>
                </ul>
              </div>
            <% end %>
          </div>

          <div>
            <%= f.label :start_date, class: "label" %>
            <%= f.date_field :start_date, id: "start_date" %>
            <%= f.label :end_date, class: "label" %>
            <%= f.date_field :end_date, id: "end_date" %>
            <%= f.submit class: "btn btn-ghost" %>
          </div>
        <% end %>

      <%= link_to "Back", :back, class: "btn btn-ghost" %>
      <hr size="1">
      <p>Can't make it?</p>
      <%= link_to "Cancel Rental", rent_path(@rent), method: :delete, class: "btn btn-ghost" %>
    </div>
  </div>
</div>
