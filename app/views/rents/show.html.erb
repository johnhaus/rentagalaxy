<% content_for(:title) do %>
  Your rented galaxy- <%= @rent.galaxy.name %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 offset-sm-2">
      <h2>Details for your rental for: <%= @rent.galaxy.name %></h2>

      <%= image_tag('homegalaxy.jpg', style:"width: 100%; max-width:500px") %>

      <h3><%= @rent.galaxy.headline %></h3>
      <p><%= @rent.galaxy.description %></p>
      <p>Price Per Day $ <%= @rent.galaxy.price %></p>
      <p>Owner: <%= @rent.galaxy.owner %></p>

      <p>Check In: <%= @rent.start_date.strftime("%b %d, %Y") %> after 3:00pm</p>
      <p>Check Out: <%= @rent.end_date.strftime("%b %d, %Y") %> before 11:00am</p>

      <p>Total Day Rented: <%= @rent.total_days %></p>
      <p>Total Price $ <%= @rent.total_price %></p>

      <%= link_to "Continue", rents_path, class: "btn btn-ghost" %>
      <%= link_to "Edit", edit_rent_path(@rent), class: "btn btn-ghost" %>
    </div>
  </div>
</div>
