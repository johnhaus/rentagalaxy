<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "homegalaxy.jpeg" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Galaxies", galaxies_path, class: "nav-link btn btn-ghost" %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "My Rentals", rents_path, class: "nav-link btn btn-ghost" %>
        </li>
        <li class="nav-item dropdown">
          <i class="fas fa-user-cog nav-link" id= "navbarDropdown" data-toggle="dropdown" aria-haspopup= true, aria-expanded= false></i>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Edit Account", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "dropdown-item") %>
          </div>
        </li>
      <% else %>
        <li class="nav-item active">
          <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
